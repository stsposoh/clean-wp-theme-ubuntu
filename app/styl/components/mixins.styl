font-path = '/wp-content/themes/ig-show/fonts/'

mx-font-face($name, $src, $weight = false, $style = false)
    @font-face
        font-family $name
        src: url(font-path + $src + '/' + $name + '.woff') format("woff"), url(font-path + $src + '/' + $name + '.woff2') format("woff2");

font-face ?= mx-font-face

