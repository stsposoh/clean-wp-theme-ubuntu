normalize_list()
    padding 0
    margin 0
    list-style-type none

clear_display_inlines()
    font-size 0
    > *
        vertical-align top
        display inline-block
        font-size inherit

truncate_text()
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
