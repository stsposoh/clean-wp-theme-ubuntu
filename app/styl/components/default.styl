@import "nib"
@import "./vars"
@import "./mixins"

*
  box-sizing border-box

html
body
  height 100%

body
  position: relative
  height: 100%;
  margin 0
  min-width: 320px
  font-family font-family
  font-size font-size
  font-weight font-weight
  color color-text
  line-height line-height
  overflow-x: hidden
  overflow-y auto
  font-smoothing antialiased
  scroll-behavior smooth
  background-color white
  @media (max-width: max-width-desktop)
    font-size: 11px;
    line-height: 15px;
  @media (max-width: max-width-tablet)
    padding-right 0 !important
  p
    margin-bottom: 21px;
    margin-top: 0;
    letter-spacing: .13px;
    @media (max-width: max-width-desktop)
      margin-bottom: 15px;
      letter-spacing: 0;
    @media (max-width: max-width-tablet)
      margin-bottom: 13px;
      letter-spacing: .13px;

img
  max-width 100%
  height: auto

*::placeholder {
  color: grey-color
}

*::-webkit-input-placeholder {
  color: grey-color
}

*:-moz-placeholder {
  color: grey-color
}

*::-moz-placeholder {
  color: grey-color
}

*:-ms-input-placeholder {
  color: grey-color
}


body input:focus:required:invalid,
body textarea:focus:required:invalid
  color: grey-color

body input:required:valid,
body textarea:required:valid
  color: grey-color

