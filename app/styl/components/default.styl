a
  transition color .3s ease
  &:link
    color accent-color
    text-decoration none
    border none
    outline none
  &:visited
    outline-color: transparent;
    color accent-color
  &:focus
    outline-color: transparent;
    border none
    outline none
  &:hover
    color: rgba(0, 0, 0, 0.9);
    text-decoration none
  &:active
    border none
    outline none
    color grey-color


.h1,
.h2,
.h3
  //font-family: 'Arkhip-font';
  font-weight: 100;
  margin: 0;

.h1
  font-size: 54px;
  line-height: 65px;
  font-weight: normal;
  letter-spacing: 0.03em;
  @media (max-width: max-width-desktop)
    font-size: 36px;
    line-height: 43px;
  @media (max-width: max-width-tablet)
    font-size: 20px;
    line-height: 24px;

.h2
  font-size: 54px;
  line-height: 65px;
  letter-spacing: 0.03em;
  @media (max-width: max-width-desktop)
    font-size: 36px;
    line-height: 46px;
  @media (max-width: max-width-tablet)
    font-size: 20px;
    line-height: 24px;

.h3
  font-size: 42px;
  line-height: 50px;
  @media (max-width: max-width-desktop)
    font-size: 28px;
    line-height: 35px;
  @media (max-width: max-width-tablet)
    font-size: 20px;
    line-height: 25px;
